<%- include('partials/header') %>

<div class="container mt-5">
    <h1 class="text-center">Welcome to Sobie Dev Co. Blog</h1>

    <div class="text-center">
        <img src="/profile.jpg" alt="Profile Picture" class="img-fluid rounded-circle shadow-lg" width="200">
    </div>

    <div class="row mt-4">
        <% profileData.forEach(post => { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.post %></p>
                        <form action="/delete" method="POST">
                            <input type="hidden" name="deleteId" value="<%= post._id %>">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <form action="/insert" method="POST" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" name="title" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Post</label>
            <textarea name="post" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Post</button>
    </form>
</div>

<%- include('partials/footer') %>
