<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Luke's Sobie Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- External Stylesheets -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>

    <main class="container mt-4">
        <!-- New Post Form -->
        <form method="POST" action="insert/" class="mb-3">
            <input class="form-control mb-2" name="title" placeholder="Title">
            <textarea class="form-control mb-2" name="post" placeholder="Write your post here..."></textarea>
            <button class="btn btn-primary" type="submit">New Post</button>
        </form>

        <!-- Blog Posts -->
        <% profileData.forEach(result => { %>
            <div class="col-md-8 mb-3">
                <!-- Update Post Form -->
                <form method="POST" action="update/" class="mb-2">
                    <input class="form-control mb-2" name="updateTitle" value="<%= result.title %>">
                    <textarea class="form-control mb-2" name="updatePost"><%= result.post %></textarea>
                    <input type="hidden" name="updateId" value="<%= result._id %>">
                    <button class="btn btn-warning" type="submit"><i class="bi bi-pencil"></i> Update</button>
                </form>

                <!-- Delete Post Form -->
                <form method="POST" action="delete/">
                    <input type="hidden" name="deleteId" value="<%= result._id %>">
                    <button class="btn btn-danger" type="submit"><i class="bi bi-trash3"></i> Delete</button>
                </form>
            </div>
        <% }); %>
    </main>

    <!-- Footer -->
    <footer class="footer bg-body-tertiary text-center text-lg-start fixed-bottom">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
