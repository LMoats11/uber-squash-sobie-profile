<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sobie Dev Co. Blog</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <% include partials/header.ejs %>

    <div class="container mt-5">
        <h1 class="mb-4">Sobie Dev Co. Blog</h1>

        <div class="row">
            <div class="col-md-3">
                <img src="/profile.jpg" alt="Profile Picture" class="img-fluid rounded-circle shadow-lg">
            </div>


            <div class="col-md-9">
                <div class="row">
                    <% if (profileData.length > 0) { %>
                        <% profileData.forEach(post => { %>
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= post.title %></h5>
                                        <p class="card-text"><%= post.post %></p>
                                        <form action="/delete" method="POST">
                                            <input type="hidden" name="deleteId" value="<%= post._id %>">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No blog posts yet.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <form action="/insert" method="POST" class="mt-4">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" name="title" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Post</label>
                <textarea name="post" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Post</button>
        </form>
    </div>

    <% include partials/footer.ejs %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts.js"></script>

</body>
</html>
