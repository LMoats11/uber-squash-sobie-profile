<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/styles/styles.css">

</head>
<body>

    <!-- Include Header -->
    <%- include('partials/header') %>

    <div class="container">
        <h1 class="page-title">Luke Sobie Profile</h1>
        
        <!-- Profile Image -->
        <div class="profile-container">
            <img src="/" alt="Profile Picture" class="profile-img">
        </div>

        <!-- Blog Posts Section -->
        <div class="blog-section">
            <h2>Blog Posts</h2>
            <form action="/insert" method="POST" class="blog-form">
                <input type="text" name="title" placeholder="Blog Title" required>
                <textarea name="post" placeholder="Write your post..." required></textarea>
                <button type="submit">Add Post</button>
            </form>

            <!-- Display Existing Blog Posts -->
            <% profileData.forEach(post => { %>
                <div class="blog-card">
                    <h3><%= post.title %></h3>
                    <p><%= post.post %></p>
                    <form action="/update" method="POST" class="blog-update">
                        <input type="hidden" name="updateId" value="<%= post._id %>">
                        <input type="text" name="updateTitle" placeholder="New Title" required>
                        <textarea name="updatePost" placeholder="Update your post..." required></textarea>
                        <button type="submit">Update</button>
                    </form>
                    <form action="/delete" method="POST" class="blog-delete">
                        <input type="hidden" name="deleteId" value="<%= post._id %>">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

</body>
</html>
